{% if page.fixed_search_block %}
  {{ attach_library('solo/solo-fixed-search-block') }}
  <div id="fixed-search-block"
       class="solo-outer lone fixed-search-block{{ classes_fixed_search_block ? ' ' ~ classes_fixed_search_block }}"
       role="search"
       aria-label="{{ 'Search form'|t }}"
       aria-hidden="true"
       inert
       {{ attributes_fixed_search_block }}>
    <div id="fixed-search-block-inner" class="solo-inner solo-col solo-col-1 fixed-search-block-inner">
      <div class="fixed-search-wrapper">
        <div id="search-button-close" class="hamburger-icon hamburger-icon-close search-button-close">
          {# Button for closing the search form - initially not focusable #}
          <button type="button"
                  class="btn-animate solo-button-menu"
                  data-drupal-selector="search-block-button-close-inner"
                  aria-label="{{ 'Close search'|t }}"
                  aria-controls="fixed-search-block"
                  aria-expanded="false"
                  tabindex="-1">
            <span aria-hidden="true">{{ svg_bars|raw }}</span>
            <span class="visually-hidden">{{ 'Close search'|t }}</span>
          </button>
        </div>
        {{ page.fixed_search_block }}
      </div>
    </div>
  </div>
{% endif %}
